@{
    ViewData["Title"] = "Hob.it - Shorten your URLs!";
}

<head>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
</head>

<div class="text-center">
    <h1 class="display-4">Welcome to Hob.it</h1>
    <form target="" method="post" id="urlForm">
        <label>
            URL
        </label>
        <input type="text" name="url" id="urlInput" placeholder="http://myurl" />
        <button type="submit" form="urlForm" id="urlShortenBtn">Shorten</button>
    </form>
    <div id="shortenedURL">
        OUTPUT
    </div>
</div>